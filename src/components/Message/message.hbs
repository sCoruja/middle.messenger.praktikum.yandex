<li class="{{liClassName}}">
  <img src="{{image}}" alt="avatar" class="{{styles.message__img}}" />
  <div class="{{styles.message__message}}">
    <p class="{{styles.message__text}}">
      {{text}}
    </p>
    <div class="{{styles.message__info}}">
      <span class="{{styles.message__time}}">{{date}}</span>
      <img src="../images/done.png" alt="" class="{{styles.message__status}}" />
    </div>
  </div>
</li>