<input
{{#if placeholder}}
  placeholder='{{placeholder}}'
{{/if}}
{{#if htmlType}}
  type='{{htmlType}}'
{{/if}}
{{#if value}}
  value='{{value}}'
{{/if}}
{{#if name}}
  name='{{name}}  '   
{{/if}}
{{#if id}}
  if='{{id}}'
{{/if}}
{{#if className}}
  class='input {{className}}'
{{else}}
  class='input'
{{/if}}
/>