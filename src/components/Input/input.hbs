<input
{{#if placeholder}}
  placeholder='{{placeholder}}'
{{/if}}
{{#if htmlType}}
  type='{{htmlType}}'
{{/if}}
{{#if value}}
  value='{{value}}'
{{/if}}
{{#if name}}
  name='{{name}}'   
{{/if}}
{{#if id}}
  if='{{id}}'
{{/if}}
{{#if className}}
  class='{{className}}'
{{else}}
  class='input__input'
{{/if}}
/>