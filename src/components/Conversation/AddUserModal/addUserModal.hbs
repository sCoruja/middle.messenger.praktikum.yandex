{{#if isModalShown}}
  <div class="{{styles.overlay}}">
    <div class="{{styles.modal}}">
      {{#Button className=styles.modal__close onClick=onClose}}
        <div class="{{styles.modal__close-icon}}"></div>
      {{/Button}}
      {{#Form onSubmit=submitHandler className=styles.modal__form}}
        <label class="{{styles.modal__label}}">
          <p class="{{styles.modal__text}}">Add user</p>
          {{{InputWithValidation
            inputClassName=styles.modal__input
            errorsClassName=styles.form__inputErrors
            type="text"
            name=name
            errors=errors
            value=value
            onKeyUp=changeHandler
            placeholder="user login"
          }}}
        </label>
        {{#Button type="submit" className=styles.modal__button}}
          Search
        {{/Button}}
      {{/Form}}
      <ul class="{{styles.modal__search-result}}">
        {{#each searchResult}}
          <li class="{{../styles.modal__search-result-item}}">
            <div class="{{../styles.modal__user-img-wrapper}}">
              {{#if this.avatar}}
                <img
                  src="https://ya-praktikum.tech/api/v2/resources/{{this.avatar}}"
                  alt="alt"
                  class="{{../styles.modal__user-img}}"
                />
              {{/if}}
            </div>
            <h3 class="{{../styles.modal__search-result-text}}">@{{this.login}}</h3>
            {{#Button type="button" className=../styles.modal__search-button id=this.id onClick=../addHandler}}
              Add
            {{/Button}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
{{else}}
  <template></template>
{{/if}}