{{#if isModalShown}}
<div class="{{styles.overlay}}">
  <div class="{{styles.modal}}">
    {{#Button className=styles.modal__close onClick=onClose}}
    <div class="{{styles.modal__close-icon}}"></div>
    {{/Button}}
    {{#Form onSubmit=submitHandler enctype=true}}
    <input hidden name="chatId" value="{{{chatId}}}" />
    <label class="{{styles.modal__label}}">
      <p class="{{styles.modal__text}}">Change avatar</p>
      {{{Input
      className=styles.modal__input
      htmlType="file"
      name="avatar"
      placeholder="Enter new value..."
      }}}
    </label>
    {{#Button type="submit" className=styles.modal__button}}
    Upload
    {{/Button}}
    {{/Form}}
  </div>
</div>
{{else}}
<template></template>
{{/if}}
