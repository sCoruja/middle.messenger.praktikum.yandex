{{#if isModalShown}}
  <div class="{{styles.overlay}}">
    <div class="{{styles.modal}}">
      {{#Button className=styles.modal__close onClick=onClose}}
        <div class="{{styles.modal__close-icon}}"></div>
      {{/Button}}
      {{#Form onSubmit=submitHandler className=styles.modal__form}}
        <label class="{{styles.modal__label}}">
          <p class="{{styles.modal__text}}">Old password</p>
          {{{InputWithValidation
            inputClassName=styles.modal__input
            errorsClassName=styles.form__inputErrors
            htmlType="password"
            name="oldPassword"
            errors=form.oldPassword
            value=form.oldPassword
            onKeyUp=changeHandler
            placeholder="Enter value..."
          }}}
        </label>
        <label class="{{styles.modal__label}}">
          <p class="{{styles.modal__text}}">New password</p>
          {{{InputWithValidation
            inputClassName=styles.modal__input
            errorsClassName=styles.form__inputErrors
            htmlType="password"
            name="newPassword"
            errors=form.newPassword
            value=form.newPassword
            onKeyUp=changeHandler
            placeholder="Enter value..."
          }}}
        </label>

        {{#Button type="submit" className=styles.modal__button}}
          Save
        {{/Button}}
      {{/Form}}
    </div>
  </div>
{{else}}
  <template></template>
{{/if}}