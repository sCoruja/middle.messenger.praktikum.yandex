{{#if isModalShown}}
  <div class="{{styles.overlay}}">
    <div class="{{styles.modal}}">
      {{#Button className=styles.modal__close onClick=onClose}}
        <div class="{{styles.modal__close-icon}}"></div>
      {{/Button}}
      <label class="{{styles.modal__label}}">
        <p class="{{styles.modal__text}}">Change {{title}}</p>
        {{{Input
          className=styles.modal__input
          type="text"
          name=name
          value=value
          onKeyUp=changeHandler
          placeholder="Enter new value..."
        }}}
        <ul class="{{styles.form__inputErrors}}">
          {{#each errors}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </label>
      <button class="{{styles.modal__button}}">Save</button>
    </div>
  </div>
{{/if}}
{{#unless isModalShown}}
  <template></template>
{{/unless}}