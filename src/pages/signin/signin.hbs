<main class="signin">
  <h1 class="signin__title">Sign in</h1>
  {{#Form onSubmit=submitHandler}}
    {{#Fieldset title="Login" inputId="login" error=""}}
      {{{Input
        id="login"
        type="text"
        name="login"
        placeholder="Enter your login"
        onBlur=blurHandler
        onKeyUp=changeHandler
        value=login
      }}}
    {{/Fieldset}}
    {{#Fieldset title="Password" inputId="password" error=""}}
      {{{Input
        id="password"
        type="password"
        name="password"
        placeholder="Enter your password"
        onBlur=blurHandler
        onKeyUp=changeHandler
        value=password
      }}}
    {{/Fieldset}}
    {{#Button type="submit"}}
      Sign In
    {{/Button}}
  {{/Form}}
  <p>{{msg}}</p>
  <a href="/signup" class="signin__link">Create account</a>
</main>